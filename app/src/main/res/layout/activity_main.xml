<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.simplework.SimpleWorkActivity">


    <Button
            android:text="simple work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btWork1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btWork2"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Work with input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btWork2"
            app:layout_constraintStart_toEndOf="@+id/btWork1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>