<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="Simple work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btS" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btCC"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Chain work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btC"
            app:layout_constraintStart_toEndOf="@+id/btS" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Unique work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btU" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btS" android:layout_marginTop="32dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <Button
            android:text="Periodic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btP" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btCC"
            app:layout_constraintTop_toBottomOf="@+id/btU" android:layout_marginTop="32dp"/>
    <Button
            android:text="Constrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCC"
            app:layout_constraintStart_toEndOf="@+id/btP"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btU" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>